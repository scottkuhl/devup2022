@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="http://localhost:4280/.auth/login/aad" target="_blank">Sign In</a>
        </div>

        <article class="content px-4">

            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent Context="ex">
                    <h1>Something went wrong. Please try again in a few minutes or contact support.</h1>
                    <p>@ex.Message</p>
                </ErrorContent>
            </ErrorBoundary>

        </article>
    </main>
</div>
